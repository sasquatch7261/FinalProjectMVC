@model List<FinalProjectMVC.Models.Community>

@if (Model != null)
{
    @if (ViewBag.number == 1)
    {
        <h3>@Model.Count result(s) match your preferences</h3>

        <ul>
            @foreach (Community com in Model)
            {
                <li>@com.Name</li>
            }
        </ul>
    }

    else
    {
        <h3>@Model.Count Results</h3>

            <table>
                @foreach (Community com in Model)
                {
                    <tr>@com.Name (@com.PhoneNumber)</tr>
                    <tr>@com.Description</tr>
                }
            </table>
    }
}

